<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#C19C66"
    android:id="@+id/picture_detail_info"
    android:orientation="vertical"
    tools:context="edu.uic.ibeis_tourist.MyPictureDetailActivity">

        <TextView
            android:id="@+id/picture_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/picture_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/picture_detail_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/picture_detail_image_view"
            android:contentDescription="@string/individual_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"/>

        <!--Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show on Map"
            android:radius="15dp"
            android:id="@+id/picture_detail_show_map_button"
            android:clickable="true"
            android:layout_below="@+id/picture_detail_image_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" /-->

        <Button
            android:id="@+id/picture_detail_show_map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_on_map"
            android:clickable="true"
            android:background="@drawable/button_home_state"
            android:layout_marginTop="10dp"
            android:enabled="true" />

</LinearLayout>
